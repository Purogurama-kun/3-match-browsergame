{
  "name": "3-match-browsergame",
  "version": "1.0.0",
  "description": "Small Match-3 browser game with boosters, goals, and sound feedback, written in TypeScript.",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "render": "python3 scripts/render-index.py",
    "build:sw": "node scripts/build-service-worker.cjs",
    "build": "tsc && npm run build:sw",
    "prebuild:sw": "npm run render",
    "watch": "npm run build:sw && tsc --watch",
    "server": "npm run render && php -c backend/php.ini -S 0.0.0.0:5500 -t .",
    "docs": "jsdoc -c jsdoc.json",
    "codex": "codex --model gpt-5.1-codex-mini",
    "codex:exec": "codex exec --model gpt-5.1-codex-mini",
    "codex:apply": "codex apply"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Purogurama-kun/3-match-browsergame.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Purogurama-kun/3-match-browsergame/issues"
  },
  "homepage": "https://github.com/Purogurama-kun/3-match-browsergame#readme",
  "devDependencies": {
    "jsdoc": "^4.0.5",
    "typescript": "^5.9.3"
  }
}
