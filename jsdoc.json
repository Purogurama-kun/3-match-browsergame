{
  "source": {
    "include": ["dist"],
    "includePattern": ".+\\.(ts|js)$"
  },
  "opts": {
    "destination": "docs",
    "recurse": true,
    "readme": "README.md"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": false
    }
  }
}